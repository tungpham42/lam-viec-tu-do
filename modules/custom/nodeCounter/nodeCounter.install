  return $schema;
}

/**
 * Disable the nodeCounter module if the node module is not enabled.
 */
function nodeCounter_update_8001() {
  if (!\Drupal::moduleHandler()->moduleExists('node')) {
    if (\Drupal::service('module_installer')->uninstall(['nodeCounter'], TRUE)) {
      return 'The nodeCounter module depends on the node module and has therefore been uninstalled.';
    }
    else {
      return 'There was an error uninstalling the statistcs module.';
    }
  }
}

/**
 * Disable the nodeCounter module if the node module is not enabled.
 */
function nodeCounter_update_8002() {
  // Set the new configuration setting for max age to the initial value.
  \Drupal::configFactory()->getEditable('nodeCounter.settings')->set('display_max_age', 3600)->save();
}

/**
 * Remove access_log settings.
 */
function nodeCounter_update_8300() {
  \Drupal::configFactory()->getEditable('nodeCounter.settings')->clear('access_log')->save();
}
