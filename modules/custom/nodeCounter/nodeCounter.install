<?php

/**
 * @file
 * Install and update functions for the nodeCounter module.
 */

/**
 * Implements hook_uninstall().
 */
function nodeCounter_uninstall() {
  // Remove states.
  \Drupal::state()->delete('nodeCounter.node_counter_scale');
  \Drupal::state()->delete('nodeCounter.day_timestamp');
}

/**
 * Implements hook_schema().
 */
